<% if @user.multimedia.each.size > 1 %>
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <% @user.multimedia.each.each_with_index do |photo, index| %>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>" aria-current="<%= index == 0 %>" aria-label="Slide <%= index + 1 %>"></button>
      <% end %>
    </div>
    <div class="carousel-inner">
      <% @user.multimedia.each.each_with_index do |photo, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <%= cl_image_tag photo.key, class: "rounded mx-auto d-block img-fluid", style:"height: 603px;"  %>
        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
<% elsif @user.multimedia.each.size == 1 %>
  <% @user.multimedia.each.each do |photo| %>
    <%= cl_image_tag photo.key, class: "mx-auto d-block img-fluid", style:"height: 600px;" %>
  <% end %>
<% else %>
  <%= image_tag("no-image.png", class: "mx-auto d-block img-fluid", style:"height: 600px;") %>
<% end %>
