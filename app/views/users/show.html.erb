<div class="row gutters-sm py-3">
  <div class="col-md-4 my-3">
    <div class="card bordered">
      <div class="card-body light bordered">
        <div class="d-flex flex-column align-items-center text-center">
          <% if @user.looking_for_band %>
            <% avatar_border_color = "green" %>
          <% else %>
            <% avatar_border_color = "red" %>
          <% end %>
          <div class="avatar-wrapper">
            <% if @user.profile_picture.attached? %>
              <%= cl_image_tag @user.profile_picture.key, class: "avatar-bordered", style: "border: #{avatar_border_color} 4px solid;" %>
            <% else %>
              <%= image_tag "no-profile-picture.jpg", class: "avatar-bordered", style: "border: #{avatar_border_color} 4px solid;" %>
            <% end %>
            <% if @user == current_user %>
              <div class="avatar-hover">
                <%= link_to "Edit", edit_user_path, class: "edit-link" %>
              </div>
            <% end %>
          </div>
          <div class="mt-3">
            <h4><%= @user.full_name %> <%= @user.nickname %></h4>
            <ul class="postcard__tagbox">
              <% unless @user.skills.map(&:skill).empty? %>
                <li class="tag__item"><%= image_tag("icon-band.png", style:"height: 16px;") %> <%= @user.skills.map(&:skill).join(" / ") %> </li>
              <% end %>
              <% unless @user.styles.map(&:style).empty? %>
                <li class="tag__item"><i class="fa fa-music" aria-hidden="true"></i> <%= @user.styles.map(&:style).join(" / ") %> </li>
              <% end %>
            </ul>
               <%= @user.description %>
               <br><br>
            <% if @user == current_user %>
              <%# this function is just hidding the button to any other user, with the url is still accesible %>
              <%= link_to "Create your band", new_user_band_path(user_id: @user.id), class:"btn btn-primary principal-button px-4" %>
            <% else %>
              <% if @chatroom.nil? %>
                <%= link_to "Send a message", chatrooms_path(receiver: @user), data: { turbo_method: "post" }, class:"btn btn-primary green-button px-4" %>
              <% else %>
                <%= link_to "Send a message", @chatroom, class:"btn btn-primary green-button px-4" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="card mt-3 bordered">
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap light bordered-top">
          <% if @user.looking_for_band %>
            <i class="my-2 fa fa-check-square fa-lg"></i>
            <span class="font-size-sm fw-semibold" style="color: #007A78;">Looking for a band</span>
          <% else %>
            <i class="my-2 fa fa-window-close fa-lg"></i>
            <span class="font-size-sm text-danger">I am not avalaible</span>
          <% end %>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap light">
          <i class="my-2 fa fa-user-plus fa-lg"></i>
          <span class="text-secondary"><%= @user.experience %> of experience</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap light">
          <i class="my-2 fa fa-user fa-lg"></i>
          <span class="text-secondary"><%= @user.full_name %> <%= @user.nickname %></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap light">
          <i class="my-2 fa fa-map-marker fa-lg"></i>
          <span class="text-secondary"><%= @user.address %></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap light bordered-bottom">
          <i class="my-2 fa fa-phone-square fa-lg"></i>
          <span class="text-secondary"><%= @user.phone %></span>
        </li>
      </ul>
    </div>
  </div>
  <div class="col-md-8 my-3">
    <div class="card mb-3 bordered">
      <div class="card-body light bordered">
        <div class="row">
            <%= render "user_carrousel" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-12 my-3">
    <%= render "user_bands", bands: @bands %>
  </div>
</div>
