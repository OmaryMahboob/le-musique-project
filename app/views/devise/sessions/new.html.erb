<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-2">
        <div class="m-2">
          <div class="card-header">
            <h2 class="text-center m-4">ðŸŽµ Login ðŸŽµ</h2>
          </div>
          <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
              <div class="col-md-12">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
              </div>
              <div class="col-md-12">
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="col text-center">
                <%= f.button :submit, "Login", class: "btn btn-primary btn-lg boton-verde mb-4 col-6" %>
              </div>
            <% end %>
            <div class="col-12-md-4 pt-3">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
