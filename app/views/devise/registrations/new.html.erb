<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-2">
        <div class="m-2">
          <div class="card-header">
            <h2 class="text-center m-4">Register in <strong>La musique</strong> ðŸŽµ</h2>
          </div>
          <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "row g-3" }, data: { turbo: false }) do |f| %>
              <%= f.error_notification %>
              <div class="col-md-12">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            placeholder: "boris@lewagon.com",
                            input_html: { autocomplete: "email", class: "form-control" } %>
              </div>
              <div class="col-md-6">
                <%= f.input :password,
                            required: true,
                            placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢",
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password", class: "form-control" } %>
              </div>
              <div class="col-md-6">
                <%= f.input :password_confirmation,
                            required: true,
                            placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢",
                            input_html: { autocomplete: "new-password", class: "form-control" } %>
              </div>
              <div class="col text-center">
                <%= f.button :submit, "Sign up", class: "btn btn-primary btn-lg boton-verde mb-4 col-6" %>
              </div>
            <% end %>
            <div class="col-12-md-4 pt-3">
              <p>Have an account? <%= link_to "Login", new_user_session_path %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
