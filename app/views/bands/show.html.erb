<div class="row gutters-sm">
  <h1 class="postcard__title text-center"><%= @band.band_name %> band</h1>
  <div class="col-md-8 my-3">
    <div class="card mb-3 bordered">
      <div class="card-body light bordered">
        <div class="row">
            <%= render "band_carrousel" %>
            <li class=" p-3 list-group-item d-flex justify-content-between align-items-center flex-wrap light bordered-bottom">
              <span class="text-secondary"><%= @band.content %></span>
            </li>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4 my-3">
      <div class="card bordered">
        <div class="card-body light bordered">
          <h4 class="text-center">Manager of the band üòé</h4>
          <div class="row align-items-center">
            <div class="col-md-6">
              <div class="d-flex flex-column align-items-center">
                <span class="fs-5 mb-3 text-center"><%= @band_owner.full_name %> <%= @band_owner.nickname %></span>
                <span class="fs-6 text-center"><strong><%= @band_owner.skills.map(&:skill).join(" / ") %></strong></span>
                <span class="fs-6 text-center"><%= @band_owner.styles.map(&:style).join(" / ") %></span>
              </div>
            </div>
            <div class="col-md-6 text-md-end">
              <% if @band_owner.profile_picture.attached? %>
                <%= cl_image_tag @band_owner.profile_picture.key, class:"avatar-square" %>
              <% else %>
                <%= image_tag "no-profile-picture.jpg", class:"avatar-square" %>
              <% end %>
            </div>
          </div>
          <div class="d-flex flex-column align-items-center text-center">
            <div class="mt-3">
              <% if @band_owner == current_user %>
                <%# this function is just hidding the button to any other user, with the url is still accesible %>
                <%= link_to "Edit this band", edit_user_band_path(user_id: @band.user_id, id: @band.id), class:"btn btn-primary mx-2" %>
                <%= link_to "Create your band", new_user_band_path(user_id: @band_owner.id), class:"btn btn-primary mx-2" %>
                <%= link_to "Delete this band", user_band_path(user_id: @band.user_id, id: @band.id), class:"btn btn-danger mx-2 my-2 btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete it?" } %>
              <% end %>
              <% if @band_owner != current_user %>
              <div class="d-flex">
                <% if @band_member %>
                <%= button_to "Leave this band", user_band_band_member_path(user_id: @band.user_id, band_id: @band.id, id: @band_member.id), method: :delete, class:"btn btn-primary mx-2" %>
                <% end %>
                <%= button_to "Join to this band", user_band_band_members_path(user_id: @band.user_id, band_id: @band.id), method: :post, class:"btn btn-primary mx-2" %>
                <% if @chatroom.nil? %>
                  <%= link_to "Send a message", chatrooms_path(receiver: @band_owner), data: { turbo_method: "post" }, class:"btn btn-primary mx-2" %>
                <% else %>
                  <%= link_to "Send a message", @chatroom, class:"btn btn-primary mx-2" %>
                <% end %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <div class="card mt-3 bordered">
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap light bordered-top">
          <% if @band.looking_for_member %>
            <i class="my-2 fa fa-check-square fa-lg"></i>
            <span class="font-size-sm fw-semibold", style="color: #007A78;">We are looking for you!</span>
          <% else %>
            <i class="my-2 fa fa-window-close fa-lg"></i>
            <span class="font-size-sm text-danger">Sorry, our band is full üôÅ</span>
          <% end %>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap light">
          <i class="my-2 fa fa-user-plus fa-lg"></i>
          <span class="text-secondary"> <%= @band.experience %> of experience</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap light">
          <i class="my-2 fa fa-music fa-lg"></i>
          <% @band.styles.each do |style| %>
            <span class="text-secondary"><%= style.style %></span>
          <% end %>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap light">
          <i class="my-2 fa fa-map-marker fa-lg"></i>
          <span class="text-secondary"><%= @band.city %></span>
        </li>

      </ul>
    </div>
    <% #joining a band %>
    <%@my_bands.each do |my_band|%>
     <div class="card mt-3 bordered">
        <div class="card-body light bordered">
          <h4 class="text-center">band Members</h4>
          <span class="text-secondary">
            <div>
              <div class="d-flex justify-content-between">
                <a href="<%= user_path(my_band.user) %>">
                  <h3><%= my_band.user.full_name %> <%= my_band.user.nickname %></h3>
                </a>
                <% if my_band.approved? && @current_user == @band_owner%>
                  <%= button_to "Remove member", user_band_band_member_path(id: my_band.id, band_id: @band.id), method: :delete if my_band.user != current_user%>
                <% elsif @current_user == @band_owner%>
                  <%= button_to "Approve", approve_path(id: my_band.id), method: :patch %>
                  <%= button_to "Reject", user_band_band_member_path(id: my_band.id, band_id: @band.id), method: :delete%>
                <% elsif !my_band.approved? %>
                  <p class=""><%= "waiting for approval"%></p>
                <% end %>
                </div>
    <% end %>
            </div>
          </span>
        </div>
      </div>
  </div>
</div>
